# Deploys Screensaver to Tomcat development server.  
#
# SCREENSAVER_ROOT should be set to the directory where screensaver
# has been checked out (defaults to $HOME/screensaver

cd ${SCREENSAVER_ROOT:-$HOME/screensaver} 
ant \
  -Ddebug=true \
  -Ddeploy.dir=/www/dev.screensaver1.med.harvard.edu/docroot/screensaver/ \
  -Dappserver.dir=/www/dev.screensaver1.med.harvard.edu/tomcat/ \
  -Dscreensaver.properties.file=resources/screensaver.properties.orchestra \
  deploy
rm /www/dev.screensaver1.med.harvard.edu/docroot/screensaver/WEB-INF/classes/datasource.properties
