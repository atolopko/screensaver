<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
    "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<!-- A top-level, composite Spring context configuration file, intended for unit testing
  Screensaver.  Allows a full Spring configuration to be referenced 
  via a single file.  -->

<beans>

  <bean id="dataAccessPolicy"
   class="edu.harvard.med.screensaver.db.UnrestrictedDataAccessPolicy">
  </bean>

  <import resource="spring-context-persistence.xml"/>
  <import resource="spring-context-services.xml"/>
  <import resource="spring-context-logging.xml"/>
  
</beans>
