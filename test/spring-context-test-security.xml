<!-- A top-level, composite Spring context configuration file, intended to test
  the user authentication and data access policy code. Allows a full Spring 
  configuration to be referenced via a single file.  -->

<beans>

  <import resource="spring-context-config.xml"/>

  <bean
    id="currentScreensaverUser"
    class="edu.harvard.med.screensaver.ui.CurrentScreensaverUser">
  </bean>
  
  <bean
    id="entityViewPolicy"
    class="edu.harvard.med.iccbl.screensaver.policy.IccblEntityViewPolicy"
    scope="prototype">
    <constructor-arg ref="currentScreensaverUser" />
    <constructor-arg ref="genericEntityDao" />
  </bean>

  <bean
    id="plateFacilityIdInitializer"
    class="edu.harvard.med.screensaver.service.libraries.DefaultPlateFacilityIdInitializer">
  </bean>

  <bean id="cherryPickPlateSourceWellMinimumVolumePolicy"
   class="edu.harvard.med.iccbl.screensaver.policy.cherrypicks.IccblCherryPickPlateSourceWellMinimumVolumePolicy">
  </bean>
 
  <import resource="spring-context-authentication.xml"/>
  <import resource="spring-context-persistence.xml"/>
  <import resource="spring-context-services.xml"/>
  <import resource="spring-context-logging.xml"/>
  

</beans>
