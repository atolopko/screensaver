  <!-- Navigation rules -->
  
  <!-- Note: By convention we use "success" and "error" action outcome strings to denote generic 
       outcomes.  Feel free to use others, as needed, but add them to the ScreenResultConstants 
       class, please! 
  -->

  <!-- Note: We are able to leave off the extension for the view defined in each <to-view-id>, 
       since Tiles accepts and handles missing extensions.  This is kind of nice. Unfortunately, 
       the <from-view-id> views require a ".jsp" extension, although intuitively one would like 
       to use ".jsf".
  -->
  
  <!-- define navigation rules that are applicable from *all* views (e.g. those that contain a navigation panel) -->
  <navigation-rule>
    <from-view-id>*</from-view-id>
    <navigation-case>
      <from-outcome>logout</from-outcome>
      <!-- maybe we want a "you have been logged out" page; for now we send to the query page, which will force a login -->
      <to-view-id>/main</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>goBrowseLibraries</from-outcome>
      <to-view-id>/libraries/librariesBrowser</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>goWellSearchResults</from-outcome>
      <to-view-id>/libraries/wellSearchResults</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>showLibrary</from-outcome>
      <to-view-id>/libraries/libraryViewer</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>showWell</from-outcome>
      <to-view-id>/libraries/wellViewer</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>showGene</from-outcome>
      <to-view-id>/libraries/geneViewer</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>goBrowseScreens</from-outcome>
      <to-view-id>/screens/screensBrowser</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>goQuery</from-outcome>
      <to-view-id>/query</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>goImportScreenResult</from-outcome>
      <to-view-id>/screenresults/admin/screenResultImporter</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>goImportRNAiLibraryContents</from-outcome>
      <to-view-id>/libraries/admin/rnaiLibraryContentsImporter</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>goEnvironmentInfo</from-outcome>
      <to-view-id>/dev/env</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>goSchemaManager</from-outcome>
      <to-view-id>/dev/schemaManager</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/screenresults/admin/screenResultImporter.jsp</from-view-id>
    <navigation-case>
      <from-action>#{screenResultImporter.submit}</from-action>
      <from-outcome>success</from-outcome>
      <to-view-id>/screenresults/screenResultViewer</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-action>#{screenResultImporter.submit}</from-action>
      <from-outcome>error</from-outcome>
      <to-view-id>/screenresults/admin/screenResultImporter</to-view-id>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/libraries/admin/rnaiLibraryContentsImporter.jsp</from-view-id>
    <navigation-case>
      <from-action>#{rnaiLibraryContentsImporter.submit}</from-action>
      <from-outcome>success</from-outcome>
      <to-view-id>/libraries/libraryViewer</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-action>#{rnaiLibraryContentsImporter.submit}</from-action>
      <from-outcome>error</from-outcome>
      <to-view-id>/libraries/admin/rnaiLibraryContentsImporter</to-view-id>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/screens/screensBrowser.jsp</from-view-id>
    <navigation-case>
      <from-outcome>showScreen</from-outcome>
      <to-view-id>/screens/screenViewer</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/screenresults/screenResultViewer.jsp</from-view-id>
    <navigation-case>
      <from-outcome>viewHeatMaps</from-outcome>
      <to-view-id>/screenresults/heatMapViewer</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
    <from-view-id>/libraries/wellViewer.jsp</from-view-id>
    <navigation-case>
      <to-view-id>/screenresults/screenResultViewer</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/screenresults/heatMapViewer.jsp</from-view-id>
    <navigation-case>
      <from-outcome>done</from-outcome>
      <to-view-id>/screenresults/screenResultViewer</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>
  

