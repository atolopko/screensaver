<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 1.1//EN"
       "http://struts.apache.org/dtds/tiles-config_1_1.dtd">

<!-- 
  One definition per view/page.
  "name" attribute of definition tag is inferred from the requested *.jsp URL.
  "put" elements define the parameters that are used to generate an instance of the referenced template.
-->


<tiles-definitions>

  <!-- The base definition, defining common attributes for our "concrete" definitions, below -->
  
  <definition
    name=".base"
    path="/template.jsp">
    <put
      name="pageTitle"
      type="string"
      value="Screensaver" />
    <put
      name="header"
      value="/header.jsp" />
    <put
      name="menu"
      value="/menu.jsp" />
    <!-- the JSF ID of the input component that should have initial focus 
         (specify forceId="true" in the JSF component definition) -->
    <put
      name="inputFocusId"
      value="" />
  </definition>

  <definition
    name=".unauthenticatedBase"
    extends=".base"
    path="/template.jsp">
    <put 
      name="menu"
      value="menu-for-unauthenticated.jsp"/>
  </definition>

  <!-- Concrete definitions -->


  <!-- top-level tiles -->
  
  <definition
    name="/reportException.tiles"
    extends=".base">
    <put 
      name="pageTitle"
      value="Screensaver Error!"/>
    <put
      name="body"
      value="/reportException.jsp" />
  </definition>

  <definition
    name="/login.tiles"
    extends=".unauthenticatedBase">
    <put 
      name="pageTitle"
      value="Screensaver kindly requests that you identify yourself as an authorized user."/>
    <put
      name="body"
      value="/login.jsp" />
    <put
      name="inputFocusId"
      value="j_username" />
  </definition>
  
  <definition
    name="/goodbye.tiles"
    extends=".unauthenticatedBase">
    <put 
      name="pageTitle"
      value="Thanks for using Screensaver!"/>
    <put
      name="body"
      value="/goodbye.jsp" />
  </definition>
  
  <definition
    name="/login-error.tiles"
    extends=".unauthenticatedBase">
    <put 
      name="pageTitle"
      value="Login failed! (sorry)"/>
    <put
      name="body"
      value="/login-error.jsp" />
  </definition>
  
  <definition
    name="/main.tiles"
    extends=".base">
    <put 
      name="pageTitle"
      value=""/>
    <put
      name="body"
      value="/main.jsp" />
  </definition>
  
  <definition
    name="/helpViewer.tiles"
    extends=".base">
    <put
      name="pageTitle"
      value="Instructions"/>
    <put
      name="body"
      value="/helpViewer.jsp" />
  </definition>

  <definition
    name="/downloadsViewer.tiles"
    extends=".base">
    <put
      name="pageTitle"
      value="Data Downloads"/>
    <put
      name="body"
      value="/downloadsViewer.jsp" />
  </definition>


  <!-- libraries tiles -->
  
  <definition
    name="/libraries/admin/rnaiLibraryContentsImporter.tiles"
    extends=".base">
    <put
      name="pageTitle"
      value="RNAi Library Contents Importer"/>
    <put
      name="body"
      value="/libraries/admin/rnaiLibraryContentsImporter.jsp" />
  </definition>
    
  <definition
    name="/libraries/admin/compoundLibraryContentsImporter.tiles"
    extends=".base">
    <put
      name="pageTitle"
      value="Compound Library Contents Importer"/>
    <put
      name="body"
      value="/libraries/admin/compoundLibraryContentsImporter.jsp" />
  </definition>
   
  <definition
    name="/libraries/librariesBrowser.tiles"
    extends=".base">
    <put
      name="pageTitle"
      value="Libraries Browser"/>
    <put
      name="body"
      value="/libraries/librariesBrowser.jsp" />
  </definition>
  
  <definition
    name="/libraries/libraryViewer.tiles"
    extends=".base">
    <put
      name="pageTitle"
      value="Library Viewer"/>
    <put
      name="body"
      value="/libraries/libraryViewer.jsp" />
  </definition>

  <definition
    name="/libraries/wellSearchResults.tiles"
    extends=".base">
    <put
      name="pageTitle"
      value="Well Search Results"/>
    <put
      name="body"
      value="/libraries/wellSearchResults.jsp" />
  </definition>
  
  <definition
    name="/libraries/wellViewer.tiles"
    extends=".base">
    <put
      name="pageTitle"
      value="Well Viewer"
    />
    <put
      name="body"
      value="/libraries/wellViewer.jsp"
    />
  </definition>
  
  <definition
    name="/libraries/wellFinder.tiles"
    extends=".base">
    <put
      name="pageTitle"
      value="Well Finder"/>
    <put
      name="body"
      value="/libraries/wellFinder.jsp" />
  </definition>

  <definition
    name="/libraries/geneViewer.tiles"
    extends=".base">
    <put
      name="pageTitle"
      value="Gene Viewer"/>
    <put
      name="body"
      value="/libraries/geneViewer.jsp" />
  </definition>
   
  <definition
    name="/libraries/compoundViewer.tiles"
    extends=".base">
    <put
      name="pageTitle"
      value="Compound Viewer"/>
    <put
      name="body"
      value="/libraries/compoundViewer.jsp" />
  </definition>
    
  
  <!-- screens tiles -->
  
  <definition
    name="/screens/screensBrowser.tiles"
    extends=".base">
    <put
      name="pageTitle"
      value="Screens Browser"/>
    <put
      name="body"
      value="/screens/screensBrowser.jsp" />
  </definition>
  
  <definition
    name="/screens/screenAndResultViewer.tiles"
    extends=".base">
    <put
      name="pageTitle"
      value="Screen Viewer"/>
    <put
      name="body"
      value="/screens/screenAndResultViewer.jsp" />
  </definition>
  
  <definition
    name="/screens/screenresults/admin/screenResultImporter.tiles"
    extends=".base">
    <put
      name="pageTitle"
      value="Screen Result Import Errors"/>
    <put
      name="body"
      value="/screens/screenresults/admin/screenResultImporter.jsp" />
  </definition>

  
  <!-- dev tiles -->

  <definition
    name="/dev/env.tiles"
    extends=".base">
    <put
      name="pageTitle"
      value="Environment"/>
    <put
      name="body"
      value="/dev/env.jsp" />
  </definition>
    
  <definition
    name="/dev/schemaManager.tiles"
    extends=".base">
    <put
      name="pageTitle"
      value="Schema Manager"/>
    <put
      name="body"
      value="/dev/schemaManager.jsp" />
  </definition>
  
</tiles-definitions>
