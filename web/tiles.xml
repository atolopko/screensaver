<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 1.1//EN"
       "http://struts.apache.org/dtds/tiles-config_1_1.dtd">

<!-- 
  One definition per view/page.
  "name" attribute of definition tag is inferred from the requested *.jsp URL.
  "put" elements define the parameters that are used to generate an instance of the referenced template.
-->


<tiles-definitions>

  <!-- The base definition, defining common attributes for our "concrete" definitions, below -->
  <definition
    name=".base"
    path="/template.jsp">
    <put
      name="pageTitle"
      type="string"
      value="Screensaver" />
    <put
      name="header"
      value="/header.jsp" />
    <put
      name="menu"
      value="/menu.jsp" />
  </definition>
  
  <!-- Concrete definitions -->

  <definition
    name="/login.tiles"
    extends=".base">
    <put 
      name="pageTitle"
      value="Screensaver kindly requests that you identify yourself as an authorized user."/>
    <put
      name="body"
      value="/login.jsp" />
  </definition>
  
  <definition
    name="/login-error.tiles"
    extends=".base">
    <put 
      name="pageTitle"
      value="Login failed! (sorry)"/>
    <put
      name="body"
      value="/login-error.jsp" />
  </definition>
  
  <definition
    name="/main.tiles"
    extends=".base">
    <put 
      name="pageTitle"
      value=""/>
    <put
      name="body"
      value="/main.jsp" />
  </definition>
  
  <definition
    name="/query.tiles"
    extends=".base">
    <put
      name="pageTitle"
      value="Search"/>
    <put
      name="body"
      value="/query.jsp" />
  </definition>

  <definition
    name="/screenResultImporter.tiles"
    extends=".base">
    <put
      name="pageTitle"
      value="Screen Result Importer and Error Viewer"/>
    <put
      name="body"
      value="/screenresults/screenResultImporter.jsp" />
  </definition>

   <definition
    name="/rnaiLibraryContentsImporter.tiles"
    extends=".base">
    <put
      name="pageTitle"
      value="RNAi Library Contents Importer and Error Viewer"/>
    <put
      name="body"
      value="/libraries/rnaiLibraryContentsImporter.jsp" />
  </definition>

  <definition
    name="/screenResultViewer.tiles"
    extends=".base">
    <put
      name="pageTitle"
      value="Screen Result Viewer"/>
    <put
      name="body"
      value="/screenresults/screenResultViewer.jsp" />
  </definition>

  <definition
    name="/heatMapViewer.tiles"
    extends=".base">
    <put
      name="pageTitle"
      value="Screen Result Heat Map Viewer"/>
    <put
      name="body"
      value="/screenresults/heatMapViewer.jsp" />
  </definition>
  
  <definition
    name="/wellViewer.tiles"
    extends=".base">
    <put
      name="pageTitle"
      value="Well Viewer"/>
    <put
      name="body"
      value="/libraries/wellViewer.jsp" />
  </definition>
    
  <definition
    name="/librariesBrowser.tiles"
    extends=".base">
    <put
      name="pageTitle"
      value="Libraries Browser"/>
    <put
      name="body"
      value="/libraries/librariesBrowser.jsp" />
  </definition>
  
  <definition
    name="/schemaManager.tiles"
    extends=".base">
    <put
      name="pageTitle"
      value="Schema Manager"/>
    <put
      name="body"
      value="/schemaManager.jsp" />
  </definition>
  
  <definition
    name="/env.tiles"
    extends=".base">
    <put
      name="pageTitle"
      value="Screen Result Environment"/>
    <put
      name="body"
      value="/env.jsp" />
  </definition>
  
</tiles-definitions>
